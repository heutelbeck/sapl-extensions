  <modelVersion>4.0.0</modelVersion>
  <artifactId>sapl-hivemq-extension</artifactId>
  <name>SAPL HiveMQ Extension</name>
  <description>A HiveMQ extension that adds sapl pep functionality to the
		broker.</description>
  <build>
    <plugins>
      <plugin>
        <artifactId>maven-compiler-plugin</artifactId>
      </plugin>
      <plugin>
        <artifactId>maven-jar-plugin</artifactId>
      </plugin>
      <plugin>
        <artifactId>maven-shade-plugin</artifactId>
        <version>3.4.1</version>
        <executions>
          <execution>
            <phase>package</phase>
            <goals>
              <goal>shade</goal>
            </goals>
            <configuration>
              <artifactSet>
                <excludes>
                  <exclude>javax.servlet:*</exclude>
                  <exclude>ch.qos.logback:*</exclude>
                  <exclude>aopalliance:aopalliance</exclude>
                  <exclude>org.springframework:*jcl</exclude>
                  <exclude>com.hivemq:hivemq-extension-sdk</exclude>
                </excludes>
              </artifactSet>
              <filters>
                <filter>
                  <artifact>*:*</artifact>
                  <excludes>
                    <exclude>META-INF/*.SF</exclude>
                    <exclude>META-INF/*.DSA</exclude>
                    <exclude>META-INF/*.RSA</exclude>
                    <exclude>META-INF/NOTICE*</exclude>
                    <exclude>META-INF/notice*</exclude>
                    <exclude>META-INF/MANIFEST.MF</exclude>
                    <exclude>META-INF/LICENSE*</exclude>
                    <exclude>META-INF/license*</exclude>
                    <exclude>META-INF/LGPL*</exclude>
                    <exclude>META-INF/ASL*</exclude>
                  </excludes>
                </filter>
                <filter>
                  <artifact>org.eclipse.emf:*</artifact>
                  <excludes>
                    <exclude>about.html</exclude>
                    <exclude>plugin.xml</exclude>
                    <exclude>plugin.properties</exclude>
                    <exclude>about.ini</exclude>
                    <exclude>about.mappings</exclude>
                    <exclude>about.properties</exclude>
                    <exclude>modeling32*</exclude>
                  </excludes>
                </filter>
                <filter>
                  <artifact>org.eclipse.platform:*</artifact>
                  <excludes>
                    <exclude>about.html</exclude>
                    <exclude>plugin.xml</exclude>
                    <exclude>plugin.properties</exclude>
                    <exclude>about.ini</exclude>
                    <exclude>about.mappings</exclude>
                    <exclude>about.properties</exclude>
                  </excludes>
                </filter>
                <filter>
                  <artifact>org.eclipse.xtext:org.eclipse.xtext.*</artifact>
                  <excludes>
                    <exclude>about.html</exclude>
                    <exclude>plugin.xml</exclude>
                    <exclude>plugin.properties</exclude>
                    <exclude>about.ini</exclude>
                    <exclude>about.mappings</exclude>
                    <exclude>about.properties</exclude>
                  </excludes>
                </filter>
                <filter>
                  <artifact>org.eclipse.xtext:org.eclipse.xtext</artifact>
                  <excludes>
                    <exclude>plugin.properties</exclude>
                  </excludes>
                </filter>
                <filter>
                  <artifact>org.eclipse.platform:org.eclipse.osgi</artifact>
                  <excludes>
                    <exclude>*api_description</exclude>
                    <exclude>*options</exclude>
                  </excludes>
                </filter>
                <filter>
                  <artifact>io.netty:netty*</artifact>
                  <excludes>
                    <exclude>META-INF/io.netty.versions.properties</exclude>
                    <exclude>META-INF/services/reactor.blockhound*</exclude>
                  </excludes>
                </filter>
                <filter>
                  <artifact>org.springframework:*</artifact>
                  <excludes>
                    <exclude>org.apache.commons.logging.*</exclude>
                    <exclude>META-INF/services/reactor.blockhound*</exclude>
                    <exclude>org.aopalliance.*</exclude>
                  </excludes>
                </filter>
                <filter>
                  <artifact>org.springframework:spring</artifact>
                  <excludes>
                    <exclude>org.apache.commons.logging.*</exclude>
                    <exclude>META-INF/services/reactor.blockhound*</exclude>
                    <exclude>org.aopalliance.*</exclude>
                  </excludes>
                </filter>
                <filter>
                  <artifact>org.springframework.security:*</artifact>
                  <excludes>
                    <exclude>META-INF/spring/aot.factories</exclude>
                    <exclude>META-INF/spring.tooling</exclude>
                    <exclude>META-INF/spring.schemas</exclude>
                    <exclude>META-INF/spring.handlers</exclude>
                  </excludes>
                </filter>
                <filter>
                  <artifact>org.springframework:*aop</artifact>
                  <excludes>
                    <exclude>META-INF/spring/aot.factories</exclude>
                    <exclude>META-INF/spring.tooling</exclude>
                    <exclude>META-INF/spring.schemas</exclude>
                    <exclude>META-INF/spring.handlers</exclude>
                  </excludes>
                </filter>
                <filter>
                  <artifact>org.springframework:*context</artifact>
                  <excludes>
                    <exclude>META-INF/spring/aot.factories</exclude>
                    <exclude>META-INF/spring.tooling</exclude>
                    <exclude>META-INF/spring.schemas</exclude>
                    <exclude>META-INF/spring.handlers</exclude>
                  </excludes>
                </filter>
                <filter>
                  <artifact>org.springframework:*core</artifact>
                  <excludes>
                    <exclude>META-INF/spring/aot.factories</exclude>
                  </excludes>
                </filter>
                <filter>
                  <artifact>org.springframework:*messaging</artifact>
                  <excludes>
                    <exclude>META-INF/spring/aot.factories</exclude>
                  </excludes>
                </filter>
                <filter>
                  <artifact>org.springframework:*web</artifact>
                  <excludes>
                    <exclude>META-INF/spring/aot.factories</exclude>
                  </excludes>
                </filter>
              </filters>
            </configuration>
          </execution>
        </executions>
      </plugin>
      <plugin>
        <artifactId>maven-assembly-plugin</artifactId>
        <version>3.6.0</version>
        <executions>
          <execution>
            <id>assembly</id>
            <phase>package</phase>
            <goals>
              <goal>single</goal>
            </goals>
            <configuration>
              <descriptors>
                <descriptor>assembly.xml</descriptor>
              </descriptors>
            </configuration>
          </execution>
        </executions>
      </plugin>
      <plugin>
        <artifactId>maven-surefire-plugin</artifactId>
      </plugin>
      <plugin>
        <artifactId>maven-failsafe-plugin</artifactId>
        <version>3.1.0</version>
      </plugin>
      <plugin>
        <groupId>org.asciidoctor</groupId>
        <artifactId>asciidoctor-maven-plugin</artifactId>
        <version>${asciidoctor.version}</version>
        <executions>
          <execution>
            <id>output-html</id>
            <phase>generate-resources</phase>
            <goals>
              <goal>process-asciidoc</goal>
            </goals>
            <configuration>
              <backend>html</backend>
              <doctype>xhtml</doctype>
              <headerFooter>true</headerFooter>
              <sourceDirectory>${basedir}</sourceDirectory>
              <outputDirectory>${output.dir}/target</outputDirectory>
              <sourceDocumentName>${source.document.name}</sourceDocumentName>
              <attributes>
                <icons>font</icons>
                <toc2 />
              </attributes>
            </configuration>
          </execution>
        </executions>
      </plugin>
    </plugins>
  </build>
  <profiles>
    <profile>
      <id>publish</id>
      <build>
        <plugins>
          <plugin>
            <artifactId>maven-javadoc-plugin</artifactId>
          </plugin>
          <plugin>
            <artifactId>maven-deploy-plugin</artifactId>
            <version>3.1.1</version>
            <configuration>
              <skip>true</skip>
            </configuration>
          </plugin>
          <plugin>
            <artifactId>maven-source-plugin</artifactId>
            <version>3.2.1</version>
            <executions>
              <execution>
                <id>attach-sources</id>
                <goals>
                  <goal>jar</goal>
                </goals>
              </execution>
            </executions>
          </plugin>
          <plugin>
            <groupId>org.sonatype.plugins</groupId>
            <artifactId>nexus-staging-maven-plugin</artifactId>
            <version>1.6.13</version>
            <extensions>true</extensions>
            <executions>
              <execution>
                <id>default-deploy</id>
                <phase>deploy</phase>
                <goals>
                  <goal>deploy</goal>
                </goals>
              </execution>
            </executions>
            <configuration>
              <serverId>ossrh</serverId>
              <nexusUrl>https://s01.oss.sonatype.org/</nexusUrl>
              <autoReleaseAfterClose>true</autoReleaseAfterClose>
            </configuration>
          </plugin>
          <plugin>
            <artifactId>maven-gpg-plugin</artifactId>
            <version>1.6</version>
            <executions>
              <execution>
                <id>sign-artifacts</id>
                <phase>verify</phase>
                <goals>
                  <goal>sign</goal>
                </goals>
              </execution>
            </executions>
            <configuration>
              <gpgArguments>
                <arg>--pinentry-mode</arg>
                <arg>loopback</arg>
              </gpgArguments>
            </configuration>
          </plugin>
        </plugins>
      </build>
    </profile>
  </profiles>
